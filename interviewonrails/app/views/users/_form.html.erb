<%= form_with model:@user, scope: :user, local: true do |form| %>

<% if @user.errors.any? %>
<div id="error_explanation">
    <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
    </h2>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<p>
    <%= form.label :username %><br />
    <%= form.text_field :username %><br />
    <br />
    <%= form.label :email %><br />
    <%= form.text_field :email %><br/>
    </br>
    <%= form.label :usertype %><br />
    <%= form.select(:usertype, options_for_select( [['admin', 'admin'], ['participant', 'participant']]) ) %></br>
    </br>
    <%= form.label :resume %><br />
    <%= form.file_field :resume %></br>
</p>

<p>
    <%= form.submit %>
</p>
<% end %>